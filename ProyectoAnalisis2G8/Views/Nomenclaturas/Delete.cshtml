@model ProyectoAnalisis2G8.Models.Nomenclatura

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container-fluid">

    <h1 class="h3 mb-2 text-gray-800">Libro de diario</h1>

    <div class="card shadow mb-4 w-50">
        <div class="card-header py-3">
            <h4 class="m-0 font-weight-bold text-primary">
                Borrar Cuenta
                <button type="button" class="btn btn-warning" style="float: right;" onclick="location.href='@Url.Action("Index", "Nomenclaturas")'">Regresar</button>
            </h4>
        </div>

        <div class="card-body">
            <h3>¿Seguro que quiere borrar la cuenta  @Html.DisplayFor(model => model.num_cuenta)? </h3>
            <div>

                <hr />
                <dl class="dl-horizontal">
                    <dt>
                        Número de cuenta
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.num_cuenta)
                    </dd>

                    <dt>
                        Nombre de cuenta
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.nombre_cuenta)
                    </dd>

                    <dt>
                        Descripción
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.descripcion)
                    </dd>

                    <dt>
                        Tipo de cuenta
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.tipo_cuenta)
                    </dd>

                    <dt>
                        Nivel
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.nivel)
                    </dd>

                </dl>

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-actions no-color">
                        <input type="submit" value="Borrar" class="btn btn-danger" />

                    </div>
                }
            </div>



        </div>
    </div>
</div>



