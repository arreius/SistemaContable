@model ProyectoAnalisis2G8.Models.Nomenclatura

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">

    <h1 class="h3 mb-2 text-gray-800">Nomenclatura Contable</h1>

    <div class="card shadow mb-4 w-50">
        <div class="card-header py-3">
            <h4 class="m-0 font-weight-bold text-primary">
                Editar Cuenta
                <button type="button" class="btn btn-warning" style="float: right;" onclick="location.href='@Url.Action("Index", "Nomenclaturas")'">Regresar</button>
            </h4>
        </div>

        <div class="card-body">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <h4>Nomenclatura</h4>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.id_cuenta)

                    <div class="form-group">
                        <label class="control-label col-md-2" for="correlativo">
                            Número de Cuenta
                        </label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.num_cuenta, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.num_cuenta, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2" for="correlativo">
                            Nombre de Cuenta
                        </label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.nombre_cuenta, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.nombre_cuenta, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2" for="correlativo">
                            Descripción
                        </label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.descripcion, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.descripcion, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2" for="correlativo">
                            Tipo de cuenta
                        </label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.tipo_cuenta, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.tipo_cuenta, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2" for="correlativo">
                            Nivel
                        </label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.nivel, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.nivel, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Guardar" class="btn btn-success mt-lg-4" />
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</div>









